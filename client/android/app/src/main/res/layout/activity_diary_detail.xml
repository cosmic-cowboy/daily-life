<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/diary_edit_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/edit_background"
    tools:context="com.slgerkamp.daily.life.core.diary.DiaryDetailActivity"
    app:columnCount="1"
    app:rowCount="3">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:layout_row="0"
        app:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/nav_bar"
        android:theme="@style/AppToolBar"
        app:popupTheme="@style/AppTheme"
        android:elevation="@dimen/toolbar_elevation" />

    <ImageView
        android:id="@+id/message_image"
        app:layout_row="1"
        app:layout_column="0"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_image_default_size"
        />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_row="2"
        app:layout_column="0"
        android:gravity="start"
        android:scrollbars="vertical"
        android:layout_margin="@dimen/detail_text_margin"
        />

</android.support.v7.widget.GridLayout>