<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/diary_edit_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/edit_background"
    tools:context="com.slgerkamp.daily.life.core.diary.DiaryEditActivity"
    app:columnCount="1"
    app:rowCount="3">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:layout_row="0"
        app:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:title="@string/action_edit_diary"
        android:theme="@style/AppToolBar"
        app:popupTheme="@style/AppTheme"
        android:elevation="@dimen/toolbar_elevation" />

    <ImageView
        android:id="@+id/message_image"
        android:contentDescription="@string/diary_image_content_description"
        app:layout_row="1"
        app:layout_column="0"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_row="2"
        app:layout_column="0"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:hint="@string/new_diary_edit_text_hint"
        android:paddingLeft="@dimen/edit_text_width_padding"
        android:paddingRight="@dimen/edit_text_width_padding"
        android:paddingTop="@dimen/edit_text_height_padding"
        android:paddingBottom="@dimen/edit_text_height_padding"
        />

</android.support.v7.widget.GridLayout>